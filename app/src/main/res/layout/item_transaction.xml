<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transItem_layout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="@dimen/_80sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    >

    <RelativeLayout
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:id="@+id/transItem_img"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            app:srcCompat="@drawable/ic_launcher_background"/>

        <LinearLayout
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/transItem_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/transItem_bankName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Name"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size_normal" />

            <TextView
                android:textColor="@color/colorBlack"
                android:id="@+id/transItem_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#1234"
                android:textSize="@dimen/size_mini"
            />




            <TextView
                android:id="@+id/transItem_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="@dimen/size_mini"
                />
        </LinearLayout>



        <LinearLayout
            android:gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/transItem_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="y-m-d"
                android:textSize="@dimen/size_mini" />

            <TextView
                android:id="@+id/transItem_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HH:mm"
                android:textSize="@dimen/size_mini" />

            <TextView
                android:textColor="@color/colorBlack"
                android:id="@+id/transItem_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/INR_symbol"
                android:textSize="@dimen/size_xMini"
                />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorDefault"/>

</LinearLayout>