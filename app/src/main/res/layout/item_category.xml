<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:elevation="@dimen/elevation"
    app:cardCornerRadius="@dimen/_2sdp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    android:id="@+id/catItem_layout"
    >

    <RelativeLayout
        android:padding="@dimen/_10sdp"
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:id="@+id/catItem_img"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            app:srcCompat="@drawable/ic_launcher_background"/>

        <LinearLayout
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/catItem_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <TextView
            android:id="@+id/catItem_name"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textSize="@dimen/size_normal"
            android:fontFamily="@font/balsamiq_sans_regular"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Products: "
                android:textSize="@dimen/size_mini"
                android:fontFamily="@font/balsamiq_sans_bold"
                />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/catItem_products"
            android:layout_height="wrap_content"
            android:text="Producs"
            android:textSize="@dimen/size_mini"
            android:fontFamily="@font/balsamiq_sans_regular"
            />

        </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: "
                    android:textSize="@dimen/size_mini"
                    android:fontFamily="@font/balsamiq_sans_bold"
                    />
                <TextView
                    android:id="@+id/catItem_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Success"
                    android:textSize="@dimen/size_mini"
                    android:fontFamily="@font/balsamiq_sans_regular"
                    />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>