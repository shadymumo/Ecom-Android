<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    >

    <RelativeLayout
        android:padding="@dimen/_5sdp"
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:id="@+id/receiptItem_img"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            app:srcCompat="@drawable/ic_launcher_background"/>

        <LinearLayout
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/receiptItem_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <TextView
            android:id="@+id/receiptItem_bankName"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bank name"
            android:textSize="@dimen/size_normal"
            />

        <TextView
            android:id="@+id/receiptItem_recvAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RecvAmount: 10"
            android:textSize="@dimen/size_mini"
            />


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/receiptItem_recvDate"
            android:layout_height="wrap_content"
            android:text="RecvDate: "
            android:textSize="@dimen/size_mini"
            />

            <TextView
                android:id="@+id/receiptItem_remarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remarks: "
                android:textSize="@dimen/size_mini"
                />

            <TextView
                android:id="@+id/receiptItem_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: "
                android:textSize="@dimen/size_mini"
                />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorDefault"/>

</LinearLayout>