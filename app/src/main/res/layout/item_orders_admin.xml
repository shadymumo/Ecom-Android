<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/orderAdminItem_layout"
    android:background="@drawable/shape_bg_num_picker"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/orderAdminItem_tv_cusName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer name"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size_normal"
                />

            <TextView
                android:id="@+id/orderAdminItem_tv_orderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ORDER ID: "
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size_normal"
                />
        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:id="@+id/orderAdminItem_layoutStatus"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             >
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginEnd="@dimen/_5sdp"
                android:id="@+id/orderAdminItem_imgStatus"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                app:srcCompat="@drawable/ic_launcher_background"/>

            <TextView
                android:textSize="@dimen/_8sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:background="@drawable/shape_bg_filled"
                android:textColor="@color/colorWhite"
                android:id="@+id/orderAdminItem_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDefault"/>

    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                >

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_mini"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_mini"
                    />

                <TextView
                    android:layout_weight="2"
                    android:id="@+id/orderAdminItem_tv_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="y-m-d"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_mini"
                    />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                >

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_mini"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_mini"
                    />

                <TextView
                    android:layout_weight="2"
                    android:id="@+id/orderAdminItem_tv_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="y-m-d"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_mini"
                    />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                >

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_mini"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_mini"
                    />

                <TextView
                    android:layout_weight="2"
                    android:id="@+id/orderAdminItem_tv_amt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="y-m-d"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_mini"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                >

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Milk"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_mini"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_mini"
                    />

                <TextView
                    android:layout_weight="2"
                    android:id="@+id/orderAdminItem_tv_milk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="y-m-d"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_mini"
                    />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                >

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Dahi"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_mini"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_mini"
                    />

                <TextView
                    android:layout_weight="2"
                    android:id="@+id/orderAdminItem_tv_dahi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="y-m-d"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_mini"
                    />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorDefault"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:padding="@dimen/_5sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nag: "
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_xMini"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/orderAdminItem_nag"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_xMini"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDefault"/>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:padding="@dimen/_5sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crate: "
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_xMini"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/orderAdminItem_crate"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_xMini"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDefault"/>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:padding="@dimen/_5sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight: "
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_xMini"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/orderAdminItem_weight"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_xMini"
                    />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>







</LinearLayout>