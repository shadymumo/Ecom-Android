<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:numberpicker="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_width="match_parent"
    android:padding="@dimen/_5sdp"
    android:gravity="center"
    android:layout_height="@dimen/_70sdp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/cartItem_iv_itemImg"
        android:layout_weight="0.5"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        app:srcCompat="@drawable/ic_launcher_background" />


    <LinearLayout
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cartItem_tv_itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/expandable_iv_itemImg"
            android:text="Item Name"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/size_normal" />

        <TextView
            android:id="@+id/cartItem_tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/expandable_iv_itemImg"
            android:text="IND 10"
            android:textSize="@dimen/size_xMini" />


        <TextView
            android:layout_marginTop="@dimen/_2sdp"
            android:id="@+id/cartItem_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/expandable_iv_itemImg"
            android:text="Unity Type"
            android:textSize="@dimen/size_mini" />

    </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/cartItem_tv_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="Qty: 0"
        android:textSize="@dimen/size_mini" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorDefault"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>